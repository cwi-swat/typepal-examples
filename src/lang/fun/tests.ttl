test In8 [[ let inc : int -> int = fun x : int { x + 1 } in inc(true) end ]] expect {"actual parameter"}
test In9 [[ let inc1 : int -> int = fun x : int { x + 1 } in 
            let inc2 : int -> int = fun x : int { inc1(x) } in inc2(3) end end ]]
